{
  "name": "mcpal",
  "version": "1.0.0",
  "description": "MCP server that sends native notifications with LLM-aware icons",
  "main": "dist/index.js",
  "bin": {
    "mcpal": "dist/index.js"
  },
  "files": [
    "dist/",
    "src/assets/"
  ],
  "scripts": {
    "postinstall": "node dist/scripts/setup-notifier.js",
    "test:notification": "node dist/scripts/test-notification.js",
    "build": "tsc && cp -r src/assets dist/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@types/node": "^25.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "node-notifier": "^10.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/ms": "^2.1.0",
    "@types/node-notifier": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
