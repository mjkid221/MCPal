{
  "name": "mcpal",
  "version": "1.3.8",
  "description": "MCP server that sends native notifications with LLM-aware icons",
  "main": "dist/index.js",
  "bin": {
    "mcpal": "dist/index.js"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/notify.js",
    "dist/notify.d.ts",
    "dist/notify.config.js",
    "dist/notify.config.d.ts",
    "dist/notify.types.js",
    "dist/notify.types.d.ts",
    "dist/tool-result.js",
    "dist/tool-result.config.js",
    "dist/tool-result.config.d.ts",
    "dist/tool-result.d.ts",
    "dist/tool-result.schema.js",
    "dist/tool-result.schema.d.ts",
    "dist/tool-result.types.js",
    "dist/tool-result.types.d.ts",
    "dist/notifier-paths.js",
    "dist/notifier-paths.d.ts",
    "dist/scripts/setup-notifier.js",
    "dist/scripts/setup-notifier.d.ts",
    "dist/assets/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "postinstall": "node -e \"try{require('./dist/scripts/setup-notifier.js').ensureMcpalAppSetup().catch(function(){})}catch(e){}\"",
    "test:notification": "node dist/scripts/test-notification.js",
    "test": "tsx --test test/*.test.ts",
    "build": "tsc -p tsconfig.build.json && cp -r src/assets dist/ && node dist/scripts/setup-notifier.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build && pnpm run typecheck"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "notifications",
    "macos",
    "linux",
    "windows",
    "claude",
    "codex",
    "llm",
    "desktop-notifications"
  ],
  "author": "MJ Lee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjkid221/MCPal.git"
  },
  "homepage": "https://github.com/mjkid221/MCPal#readme",
  "bugs": {
    "url": "https://github.com/mjkid221/MCPal/issues"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.0.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "node-notifier": "^10.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/ms": "^2.1.0",
    "@types/node": "^25.2.0",
    "@types/node-notifier": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
